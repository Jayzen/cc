<div id="services">
  <% @services.each_with_index do |service, index| %>
    <div class="d-flex justify-content-between">
      <div>
        <%= params[:page] ? (index + 1 + (params[:page].to_i-1)*10) : (index+1) %>.
        <%= service.name %>
        <% if @services.first == service %>
          <span class="badge badge-danger">已置顶</span>
        <% end -%>
        <% if service.reveal? %>
          <span class="badge badge-danger">已显示</span>
        <% else %>
          <span class="badge badge-primary">已隐藏</span>
        <% end -%>
      </div>
      <div>
        <%= link_to "查看", service_path(service), class: "badge badge-primary" %>
        <% unless @services.first == service %>
          <%= link_to "置顶", set_weight_service_path(service), remote: true, class: "badge badge-primary" %>
        <% end -%> 
        <%= link_to '编辑', edit_service_path(service), class: "badge badge-primary"%>
        <%= link_to '删除', delete_service_path(service), remote: true, class: "badge badge-primary" %>
        <%= link_to service.reveal? ? "隐藏" : "显示", set_reveal_service_path(service), remote: true, class: "badge badge-primary" %>
      </div>
    </div>
  <% end %>
</div>
