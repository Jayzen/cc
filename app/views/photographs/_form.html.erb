<%= form_with(model: photograph, local: true) do |form| %>
  <% unless photograph.errors.blank? %>
    <div class="alert alert-danger">
      <ul class="list-unstyled">
        <% photograph.errors.messages.values.flatten.each do |error| %>
          <li><i class="fa fa-exclamation-circle"></i> <%= error %></li>
        <% end -%>
      </ul>
    </div>
  <% end -%>

  <div class="form-group">
    <%= form.text_field :name, placeholder: "输入姓名", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group d-flex flex-row-reverse">
    <%= form.submit photograph.new_record?  ? "创建照片" : "更新照片", class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
