<%= render 'shared/nav' %>
<div class="row">
  <div class="col-md-3"><%= render 'style_left_bar' %></div>
  <div class="card col-md-9">
    <div class="card-body">
      <%= form_for(@set_advertise, url: set_contact_set_advertises_path(@set_advertise), method: :put ) do |f| %>
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="set_advertise[contact]"  value=""  <%= @set_advertise.contact == "" ? "checked" : ""%>>
            <label class="form-check-label text-secondary">
              不显示
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="set_advertise[contact]"  value="left" <%= @set_advertise.contact == "left" ? "checked" : ""%>>
            <label class="form-check-label text-secondary">
              放在地图左边
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="set_advertise[contact]"  value="right" <%= @set_advertise.contact == "right" ? "checked" : ""%>>
            <label class="form-check-label text-secondary">
              放在地图右边
            </label>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "更新基本信息栏位置", class: "btn btn-primary"%>
        </div>
      <% end -%> 
    </div>
  </div>
</div>
