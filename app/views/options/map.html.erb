<%= render 'shared/nav' %>
<div class="row">
  <div class="col-md-3"><%= render 'style_left_bar' %></div>
  <div class="card col-md-9">
    <div class="card-body">
      <%= form_for(:options, url: set_map_options_path(current_user), method: :put ) do |f| %>
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="option[map]"  value=""  <%= current_user.map == "" ? "checked" : ""%>>
            <label class="form-check-label text-secondary">
              首页不显示地图
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="option[map]"  value="left" <%= current_user.map == "left" ? "checked" : ""%>>
            <label class="form-check-label text-secondary">
              地图放置在首页左边
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="option[map]"  value="right" <%= current_user.map == "right" ? "checked" : ""%>>
            <label class="form-check-label text-secondary">
              地图放置在首页右边
            </label>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "更新地图位置", class: "btn btn-primary"%>
        </div>
      <% end -%>
    </div>
  </div>
  </div>
</div>
