<div class="card">
  <div class="card-body d-flex flex-column">
    <div class="mt-2">
      <a href="<%= style_options_path %>">
        <button type="button" class="btn <%= (action_name == 'style') ? 'btn-primary' : 'btn-outline-secondary' %> btn-block">基本信息栏设置</button>
      </a>
    </div>
    <% unless current_user.maps.size == 0 %>
      <div class="mt-2">
        <a href="<%= map_options_path %>">
          <button type="button" class="btn <%= (action_name == 'map') ? 'btn-primary' : 'btn-outline-secondary' %> btn-block">首页地图设置</button>
        </a>
      </div>
    <% end -%>
  </div>
</div>
