<div class="card">
  <div class="card-header text-center">
    权限设置
  </div>
  <div class="card-body">
    <%= form_for(@user, url: update_privilege_admin_path(@user), method: 'put') do |f| %>
      <div class="form-group">
        <% @user.options.each do |option| %>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="privilege[<%= option.name %>]" value=true <%= (@user.has_roles?(option.name.to_sym) ? "checked" : "") %>>
            <label class="form-check-label">
              <%= option.show %>
            </label>
          </div>
        <% end -%>
        <%= hidden_field_tag "privilege[not_nil]", true %>
      </div>
      <div class="form-group">
        <%= f.submit "更新权限", class: "btn btn-primary btn-sm"%>
      </div>
    <% end %>
  </div>
</div>
